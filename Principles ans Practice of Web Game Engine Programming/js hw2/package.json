        "node-fetch": "^3.3.2",
        "websocket": "^1.0.34"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.23.3",
        "@types/crypto-js": "^4.2.2",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.12",
        "@types/module-alias": "^2.0.4",
